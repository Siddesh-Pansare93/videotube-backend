				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"content\": \"Hello World!\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/tweet",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"tweet"
					]
				}
			},
			"response": []
